<Page x:Class="XmlEditorTool.XmlFileMvvm.FileLoaderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XmlEditorTool.XmlFileMvvm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileLoaderView">

    <Grid Background="Transparent" Height="Auto">
        <StackPanel Name="FileUploadPanel" Background="LightBlue" Drop="UploadDrop"
                    VerticalAlignment="Center" Height="Auto" AllowDrop="True">
            <StackPanel.Resources>
                <Image x:Key="UploadImage" Height="64" Width="64"
                   Source="../Resources/File-Adobe-Dreamweaver-XML-01-icon.png"/>
            </StackPanel.Resources>

            <Button HorizontalContentAlignment="Center"  
                Height="64" Width="64"
                Click="UploadFileClick"
                Content="{StaticResource UploadImage}"/>
            <Label HorizontalContentAlignment="Center"
               VerticalContentAlignment="Bottom">Drop .xml file or click button</Label>
        </StackPanel>
    </Grid>
</Page>
